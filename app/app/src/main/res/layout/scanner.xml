<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:background="@drawable/vien_trong"
        android:id="@+id/tv_qr_readTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp8"
        android:layout_marginTop="@dimen/dp8"
        android:hint="người nhận"
        app:layout_constraintBottom_toTopOf="@+id/tv_sent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/tv_sent"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/vien_trong"
        android:hint="người gửi"
        app:layout_constraintBottom_toTopOf="@+id/recieve"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:background="@drawable/vien_trong"
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp50"
        android:hint="nhập số điểm thanh toán"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_marginBottom="@dimen/dp50"
        android:background="@drawable/vien_trong"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

    </Spinner>


    <Spinner
        android:id="@+id/recieve"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/vien_trong"
        app:layout_constraintBottom_toTopOf="@+id/send"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

    </Spinner>

    <Button
        android:background="@drawable/vien_trong"
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp50"
        android:onClick="chuyentien"
        android:text="Giao dịch"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="159dp" />



</android.support.constraint.ConstraintLayout>